<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="5sp"
    android:layout_margin="10sp"
    android:id="@+id/cardViewItem"
    app:cardCornerRadius="20sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="100sp"
            android:src="@drawable/pic0"
            android:id="@+id/headingImage"
            android:layout_margin="10sp"
            app:shapeAppearance="@style/SoftCorner"
            android:layout_height="100sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/headingtext"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="@string/doraemon_the_iconic_blue_robotic_cat_from_the_22nd_century_is_a_time_traveling_companion_to_nobita_nobi_he_possesses_a_magical_pocket"
            tools:ignore="VisualLintLongText" />
    </LinearLayout>

</androidx.cardview.widget.CardView>